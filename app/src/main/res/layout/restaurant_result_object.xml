<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/restaurantObjLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rllName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/rllAddress"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.87"
                android:text="@string/address"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rllRating"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:text="@string/Rating"
                android:textAlignment="center"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/rllStar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/btn_star_big_on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rllDistance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="0.10"
                android:text="@string/distance_number"
                android:textAlignment="textEnd"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rllDistanceType"
                android:layout_width="219dp"
                android:layout_height="match_parent"
                android:layout_weight="0.38"
                android:text="@string/distance_footer"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.10"
            android:paddingTop="0dp"
            app:srcCompat="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>
